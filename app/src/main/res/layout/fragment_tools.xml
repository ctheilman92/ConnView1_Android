<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.milkymac.connview_main.ToolsFragment">

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/toolsContainer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Pingcard_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cardContent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            card_view:cardCornerRadius="4dp">

            <Button
                android:id="@+id/btnPing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardContent"
                android:elevation="0dp"
                android:gravity="center"
                android:text="Pinger"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/textContent"
                android:textSize="24sp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/DNScard_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cardContent"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            card_view:cardCornerRadius="4dp">

            <Button
                android:id="@+id/btnDns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardContent"
                android:elevation="0dp"
                android:gravity="center"
                android:text="DNS Lookup"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/textContent"
                android:textSize="24sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ecard_view"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@color/cardContent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            card_view:cardCornerRadius="4dp">


            <Button
                android:id="@+id/btnPortScan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardContent"
                android:elevation="0dp"
                android:gravity="center"
                android:text="Port Scan"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/textContent"
                android:textSize="24sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/acard_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_row="4"
            android:layout_column="1"
            card_view:cardCornerRadius="4dp">


            <Button
                android:id="@+id/btnTraceRoute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardContent"
                android:elevation="0dp"
                android:gravity="center"
                android:text="TraceRoute"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/textContent"
                android:textSize="24sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>
</FrameLayout>
